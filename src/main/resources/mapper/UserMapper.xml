<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.DailyLife.mapper.UserMapper">
    <select id="findAll" resultType="com.DailyLife.dto.User" >
        select * from user
    </select>

    <insert id="addUser" useGeneratedKeys="true" keyProperty="userNum">
        insert INTO user(userId,userNickName,userPassword,userEmail) values (#{userId} ,#{userNickName}, #{userPassword}, #{userEmail})
    </insert>

    <select id="login" resultType="_int">
        select count(*) from user where userId = #{userId} and userPassword = #{userPassword}
    </select>

    <select id="findByEmail" resultType="string">
        select userId from user where userEmail = #{userEmail}
    </select>

    <select id="CheckById" resultType="_int">
         select count(*) from user where userId = #{userId}
    </select>

    <select id="CheckByUserNickName" resultType="_int">
         select count(*) from user where userNickName = #{userNickName}
    </select>


</mapper>